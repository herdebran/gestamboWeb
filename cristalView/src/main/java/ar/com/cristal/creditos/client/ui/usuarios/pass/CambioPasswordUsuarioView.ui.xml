<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="gwt-TitledPanel">
		<div class="title" style="float:left"><g:Label ui:field="titulo"></g:Label> </div>
		<div class="clear05"></div>
		<div class="title">Cambio de Password</div>
		<div class="clear10"></div>
		
		<table>
			<thead></thead>
			<tbody>
				<tr>
					<td>Contrase&ntilde;a Actual</td>
					<td><g:PasswordTextBox ui:field="password"  width="100px" maxLength="8"></g:PasswordTextBox></td>
				</tr>
				<tr>
					<td>Nueva Contrase&ntilde;a</td>
					<td><g:PasswordTextBox ui:field="nuevaPassword" maxLength="8" width="100px" ></g:PasswordTextBox></td>
				</tr>
				<tr>
					<td>Confirme Nueva Contrase&ntilde;a</td>
					<td><g:PasswordTextBox ui:field="confirmacionNuevaPassword" maxLength="8" width="100px" ></g:PasswordTextBox></td>
				</tr>
			</tbody>
		</table>
		<div class="clear5"></div>
		<div class="clear20"></div>
<!-- 		Botones -->
		<div style="float:right">
		<g:Button ui:field="guardar" text="Guardar" />
		<g:Button ui:field="cancelar" text="Volver" />
		</div>
		<div class="clear20"></div>
	</div>
	</g:HTMLPanel>
</ui:UiBinder> 